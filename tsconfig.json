{
    "compilerOptions": {
        "outDir": "dist",
        "allowJs": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "resolveJsonModule": true,
        "noImplicitReturns": true,
        "esModuleInterop": true,
        "target": "esnext",
        "module": "commonjs",
        "baseUrl": "src",
        "paths": {
            "@code/*": ["day1/*"],
            "@recursion/*": ["the_recursive_book_of_recursion/*"]
        }
    },
    "include": ["./src/**/*"],
    "exclude": ["node_modules"]
}
